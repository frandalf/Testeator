<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.frandalf.testeator1evaluacin.Test">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_Pregunta"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_RespuestaA"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Seleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BT_A" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_RespuestaB"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Seleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BT_B" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_RespuestaC"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="Seleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BT_C" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TV_RespuestaD"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="seleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BT_D" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Siguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/BT_Siguiente"
                    android:enabled="false" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
